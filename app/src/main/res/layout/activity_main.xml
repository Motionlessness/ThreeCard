<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/playerCard1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/playerCard2"
        app:layout_constraintEnd_toStartOf="@+id/playerCard2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerCard2"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/playerCard2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/playerCard3"
        app:layout_constraintEnd_toStartOf="@+id/playerCard3"
        app:layout_constraintStart_toEndOf="@+id/playerCard1"
        app:layout_constraintTop_toTopOf="@+id/playerCard3"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/playerCard3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginEnd="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/playerCard4"
        app:layout_constraintEnd_toStartOf="@+id/playerCard4"
        app:layout_constraintStart_toEndOf="@+id/playerCard2"
        app:layout_constraintTop_toTopOf="@+id/playerCard4"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/playerCard4"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/playerCard5"
        app:layout_constraintEnd_toStartOf="@+id/playerCard5"
        app:layout_constraintStart_toEndOf="@+id/playerCard3"
        app:layout_constraintTop_toTopOf="@+id/playerCard5"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/playerCard5"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/playerCard6"
        app:layout_constraintEnd_toStartOf="@+id/playerCard6"
        app:layout_constraintStart_toEndOf="@+id/playerCard4"
        app:layout_constraintTop_toTopOf="@+id/playerCard6"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/playerCard6"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playerCard5"
        app:srcCompat="@drawable/back" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/compCard1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/compCard2"
            app:layout_constraintEnd_toStartOf="@+id/compCard5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/compCard2"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/compCard2"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="212dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/compCard3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/compCard6"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/compCard3"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/compCard4"
            app:layout_constraintEnd_toEndOf="@+id/compCard2"
            app:layout_constraintStart_toEndOf="@+id/compCard4"
            app:layout_constraintTop_toTopOf="@+id/compCard4"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/compCard4"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toBottomOf="@+id/compCard5"
            app:layout_constraintEnd_toEndOf="@+id/compCard1"
            app:layout_constraintStart_toEndOf="@+id/compCard1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/compCard5"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginTop="62dp"
            app:layout_constraintEnd_toStartOf="@+id/compCard2"
            app:layout_constraintStart_toEndOf="@+id/compCard1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/compCard6"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/compCard5"
            app:layout_constraintEnd_toStartOf="@+id/compCard2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/compCard3"
            app:srcCompat="@drawable/back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/faceDown1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/faceDown2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentCard"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/faceDown2"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/faceDown3"
            app:layout_constraintStart_toEndOf="@+id/faceDown1"
            app:layout_constraintTop_toBottomOf="@+id/faceDown6"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/faceDown3"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/faceDown2"
            app:layout_constraintTop_toBottomOf="@+id/faceDown5"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/faceDown4"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginTop="181dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/Deck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/faceDown5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/faceDown5"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginTop="181dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="190dp"
            app:layout_constraintBottom_toTopOf="@+id/faceDown3"
            app:layout_constraintEnd_toStartOf="@+id/faceDown4"
            app:layout_constraintStart_toEndOf="@+id/faceDown6"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/faceDown6"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginStart="181dp"
            android:layout_marginTop="181dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="190dp"
            app:layout_constraintBottom_toTopOf="@+id/faceDown2"
            app:layout_constraintEnd_toStartOf="@+id/faceDown5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/currentCard"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="321dp"
            android:layout_marginEnd="221dp"
            android:layout_marginBottom="50dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/faceDown1"
            app:layout_constraintEnd_toStartOf="@+id/Deck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <ImageButton
            android:id="@+id/Deck"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="317dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/currentCard"
            app:layout_constraintTop_toBottomOf="@+id/faceDown4"
            app:srcCompat="@drawable/back" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/viewNewGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#673AB7"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttNewGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#673AB7"
            android:onClick="onClick"
            android:text="Tap to Play Three Card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>